/*for PrismJS 1.19.0 8*/

color-code-background = #1e2128
color-js-keyword = #c754dc
color-string = #7bbc5d
color-operator = #23aab8
color-punctuation = #9aa2b3
color-link = #258fb8
color-function = #3a9ff2
color-js-default = #e94a5f
color-js-number = #d0864a
color-js-comment = slategray
color-js-keyword-this = #e5b353


color-comments = #7f848e

code[class*="language-"],
pre[class*="language-"] {
	color: color-js-default;
	background: none;
	text-shadow: 0 1px rgba(0, 0, 0, 0.1);
	font-family: Menlo, Monaco, 'Courier New', monospace;

}

/* Code blocks */
pre[class*="language-"] {
	background: color-code-background;
	margin-bottom: 15px;
}

code[class*="language-"] {
	.token.comment,
	.token.prolog,
	.token.doctype,
	.token.cdata {
		color: color-js-comment;
	}

	.token.punctuation {
		color: color-punctuation;
	}

	.token.namespace {
		opacity: .7;
	}

	.token.property,
	.token.tag,
	.token.constant,
	.token.symbol,
	.token.deleted {
		color: color-js-default;
	}

	.token.boolean,
	.token.number {
		color: color-js-number;
	}

	.token.attr-name{
		color:color-js-number;
	}
	.token.attr-value{
		color:color-string;
		.token.punctuation{
			color:color-string;
		}
	}

	.token.string,
	.token.char,
	.token.builtin,
	.token.inserted {
		color: color-string;
	}

	.token.operator,
	.token.entity,
	.token.url,
	.language-css .token.string,
	.style .token.string,
	.token.variable {
		color: color-operator;
	}

	.token.keyword {
		color: color-js-keyword;

		&.keyword-this {
			color: color-js-keyword-this;
		}
	}

	.token.atrule,
	.token.function,
	.token.class-name {
		color: color-function;
	}



	.token.regex,
	.token.important {
		color: #fd971f;
	}

	.token.important,
	.token.bold {
		font-weight: bold;
	}
	.token.italic {
		font-style: italic;
	}

	.token.entity {
		cursor: help;
	}
}



// For CSS
code[class*="language-css"],
pre[class*="language-css"] {
	color:color-js-number;

	.token.selector{
		color: color-js-default;

		.token.class { color: color-js-number; }
		.token.id { color: color-function; }
		.token.pseudo-class { color: color-operator; }
		.token.attribute { color: color-js-keyword; }
	}
	.token.property { color: color-punctuation; }
	.token.number { color: color-js-default; }
}

.token.atrule,
.token.function,
.token.class-name {
	color: color-function;
}
// line numbers
.line-numbers .line-numbers-rows {
	border-right-color: #282b33;
	left: -4em;
}
.line-numbers-rows > span:before {
	color: #474c5d;
}


