.site-header{
  display: flex;
  flex-direction: column;
  padding: 2em 0 2em 0;
  border-left: #eff0f1 2px solid;

  .home-link{
    position: relative;
    display: inline-block;
    padding-left: 1.6em;

    &::before{
      content: '';
      height: 30px;
      width: 4px;
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateX(-75%) translateY(-50%);
      background: #1f2935; 
    }

    a{
      font-size: 2em;
      color: #1f2935;

      &.Angelina{font-family: 'Angelina';}
      &.Caveat{font-family: 'Caveat';}
      &.Handlee{font-family: 'Handlee';}
      &.Kalam{font-family: 'Kalam';}
      &.ShadowsIntoLight{font-family: 'ShadowsIntoLight';}
      &.Springfield{font-family: 'Springfield';}
      &.kinsley{font-family: 'kinsley';}
      &.Indian{font-family: 'Indian';}
      &.Luna{font-family: 'Luna';}
      &.Habel{font-family: 'Habel';}
      &.Quentin{
        font-family: 'Quentin';
        font-size: 32px;
        font-weight: normal;
      }
      &.Mona{
        font-family: 'Mona';
        font-size: 32px;
      }
    }
  }
  
  .menus-container{
    border-left: #eff0f1 2px solid;
    padding: 20px 0;
    position: fixed;
    left: 50vw;
    top: 50vh;
    transform: translateX(240px) translateY(-50%);
    z-index: 999;

    &::before,
    &::after{
      content: '';
      height: 6px;
      width: 2px;
      position: absolute;
      left:-2px;
      background: #c8cfd4; 
    }

    &::before{top: 0;}
    &::after{bottom: 0;}

    .menus-list{
      position: relative;
      display: flex;
      flex-direction: column;
      margin-left: -2px;

      li{
        color: #fff;
        margin-bottom: 10px;
        cursor: pointer;

        &:last-child{
          margin-bottom: 0;
        }

        &:nth-child(2n+1) a{
          background:rgb(221, 54, 66);
          border-left: #bf1e29 2px solid;

          &:hover{
            background:#bf1e29;
          }
        }

        &:nth-child(2n+2) a{
          background:rgb(96, 193, 208);
          border-left: #47a9b9 2px solid;

          &:hover{
            background:#47a9b9;
          }
        }

        a{
          display: block;
          text-align: center;
          color: #fff;
          padding: 0 4px;
          font-size: 16px;
          font-weight: bold;
          transition: background 0.2s ease-in;
        }
      }
    }
  }
}
