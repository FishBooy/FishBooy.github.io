.site-column-index {
  margin: 0 auto;
  min-height: 100vh;
  display: flex;
  flex-direction: column;

  .site-content-index{
    flex-grow: 1;
    display: flex;

    .post-list-container{
      border-left: color-line 2px solid;
      flex-grow: 1;

      .post-list-by-year{
        margin-bottom: 2em;

        .post-list-item,
        .post-arch-year {
          display: flex;
          align-items: center;
          position: relative;

          &::before{
            content: '';
            height: 5px;
            width: 4px;
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateX(-75%) translateY(-50%);
          }
        }

        .post-arch-year {
          position: relative;
          padding: 0.6em 2.5em 0.6em 1.6em;
          &::before {
            height: 21px;
            width: 4px;
          }
          .arch-year{
            color: color-archive-title;

            a{
              font-size: 20px;
              font-weight: bold; 
            }
          }
        }

        .post-list-item{
          padding: .6em 0 .6em 1.2em;

          &::before{
            transition: background .5s;
            background: #d2d8de;
          }

          &:hover{
            &::before{
              background: color-tips-hover;
            }
            h2 {
              .post-title{
                text-decoration: none;
              }
              .post-date{
                color: color-tips-hover;
              }
            }
            
          }

          h2{
            width: 100%;
            position: relative;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 0 0 .5em;
            font-weight: normal;

            .post-date{
              flex-shrink: 0;
              display: inline-block;
              font-size: 12px;
              margin-top: 1px;
              color: color-tips;
              transition: color .5s;
              width: 41px;
              text-align: left;
            }

            .post-title{
              transition: color .5s;
              color: color-link-title;
              text-decoration: none;
              font-size: 16px;
            }
          }
        }

        &:nth-child(2n+1){
          .post-arch-year::before{
            background: color-rose;
          }

          .post-list-item:hover{
            h2 {
              .post-title{
                color: color-rose;
              }
            }
          }
        }

        &:nth-child(2n+2){
          .post-arch-year::before{
            background: color-lake;
          }
          .post-list-item:hover{
            h2 {
              .post-title{
                color: color-lake;
              }
            }
          }
        }
      }
    }
  }
}