
/*====reset user-agent styles=====*/

body, h1, h2, h3, h4, h5, h6, hr, p, blockquote,
dl, dt, dd, ul, ol, li,
pre,form, fieldset, legend, button, input, textarea,
th, td /* table elements 表格元素 */ {
  margin: 0;
  padding: 0;
}

/** font style **/
body,button, input, select, textarea /* for ie */ {
  /*"Helvetica Neue", "Helvetica", "Hiragino Sans GB"*/
  font:normal normal normal 15px/1.5 "microsoft yahei","微软雅黑",PingFangSC-Regular,'Roboto', Verdana, "Open Sans", "Helvetica Neue", "Helvetica", Arial,sans-serif;
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  -webkit-text-size-adjust:100%;
  text-size-adjust:100%;
}
h1, h2, h3, h4, h5, h6 { font-size: 100%; }
address, cite, dfn, em, var { font-style: normal; }
code, kbd, pre, samp { font-family: courier new, courier, monospace; }
small { font-size: 12px; }

/** list **/
ul, ol { list-style: none; }

/** anchor **/
a { text-decoration: none; outline: none; color: #3f4a56; }
a:hover { text-decoration: none; }

/** form elements **/
legend { color: #000; } /* for ie6 */
fieldset, img { border: 0; outline: none;} /* img 搭车：让链接里的 img 无边框 */
button, input, select, textarea { font-size: 100%; } /* 使得表单元素在 ie 下能继承字体大小 */

/** table **/
table { border-collapse: collapse; border-spacing: 0; }

div,p,h1,h2,h3,h4,h5,h6,ul,li,ol,dt,dd,blockquote,article,section,body{ box-sizing: border-box }

















